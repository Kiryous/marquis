#quotation
  position relative
  width 650px
  min-height 100px
  overflow hidden
  padding 0 0 45px 0
  background-size cover !important
  background-position center
  background-image url(defaultback.jpg)
  
  &:after
    content ' '
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background rgba(0, 0, 0, 0.6)

.quotes
  position absolute
  top 15px
  left 30px
  color #fff
  font-family 'Playfair Display'
  font-weight bold
  font-size 72px
  z-index 1

#author
  margin-top 10px
  margin-bottom 10px
  width 100%
  color white
  font-family Arial
  font-weight normal
  font-style normal
  font-size 18px
  background none
  border 0
  outline none
  spellcheck none

.text
  position relative
  width 490px
  padding 30px 30px 0 90px
  color #fff
  font-family 'Playfair Display'
  font-weight bold
  font-style italic
  font-size 24px
  z-index 1

#quote
  color #fff
  font-family 'Playfair Display'
  font-weight bold
  font-style italic
  font-size 24px
  background none
  border 0
  outline none
  resize none
  width 490px
  height 40px
  spellcheck none

#imageUrl
  width 250px

.social
  position absolute
  bottom 20px
  left 90px
  z-index 1
  opacity 0.7
  div
    div
      background transparent

#image
  visibility hidden

#result
  display none
  position relative

input[type=range][orient=vertical]
  writing-mode bt-lr
  -webkit-appearance slider-vertical
  width 8px
  height 158px
  padding 0 5px
  position absolute
  z-index 0
  right 0
  top -2

.button
  background transparent
  border 1px solid #8C8C8C
  padding 10px 15px
  margin-right 15px
  font-family sans-serif
  color #8C8C8C
  font-size 16px
  font-weight bold
  border-radius 3px
  outline none
  text-decoration none
  transition .1s
  cursor pointer

.button:hover,.button_selected
  background #8C8C8C
  color white

#download
  background transparent
  border 1px solid #4cbd18
  padding 10px 15px
  margin-right 15px
  font-family sans-serif
  color #4cbd18
  font-size 16px
  font-weight bold
  border-radius 3px
  outline none
  transition .1s
  text-decoration none
  cursor pointer
  display inline-block
  margin 10px 0px
  
  &:before
    content '↓ '
    
  &:active
    &:before
      content '✓ '
      
  &:hover
    background #4cbd18
    color white

#quoteImage
  visibility hidden

.quoteContainer
  width 670
  position relative

#code
  display none
  width 620px
  height 150px
  padding 15px
  font-size 16px
  background #dedede
  color #696969
  border 0

